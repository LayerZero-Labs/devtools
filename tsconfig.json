
{
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src"]
}