{
  "root": true,
  "plugins": ["prettier", "turbo"],
  "extends": ["@layerzerolabs/eslint-config-next/recommended", "prettier"],
  "overrides": [
    {
      "files": ["test/**"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": {
        "jest/no-disabled-tests": "error"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 8
  },
  "ignorePatterns": ["node_modules/", "dist/", ".turbo/"],
  "settings": {
    "import/resolver": {
      "typescript": {
        // The import plugin needs to know about the tsconfigs
        // so that it can work with the custom path aliases we have setup
        "project": [
          "packages/*/tsconfig.json",
          "tests/*/tsconfig.json",
          "tsconfig.json"
        ]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "curly": "error",
    // During the transition period to the new lint rules, we'll deescalate the new rules to warnings
    "import/order": "warn",
    "import/no-unresolved": "warn",
    "sort-imports": "warn",
    // This rule needs to be disabled otherwise ESLint will error out
    // on things like TypeScript enums or function types
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    // Since none of our environment variables affect the build output, we're safe
    // to ignore any errors related to undeclared environment variables
    "turbo/no-undeclared-env-vars": "warn"
  }
}
