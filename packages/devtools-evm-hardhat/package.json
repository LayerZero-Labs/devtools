{
  "name": "@layerzerolabs/devtools-evm-hardhat",
  "version": "3.0.0",
  "description": "Hardhat utilities for LayerZero EVM projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LayerZero-Labs/devtools.git",
    "directory": "packages/devtools-evm-hardhat"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./tasks": {
      "types": "./dist/tasks/index.d.ts",
      "require": "./dist/tasks/index.js",
      "import": "./dist/tasks/index.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "tasks",
    "type-extensions"
  ],
  "scripts": {
    "prebuild": "$npm_execpath tsc --noEmit",
    "build": "$npm_execpath tsup",
    "clean": "rm -rf dist",
    "dev": "$npm_execpath tsup --watch",
    "lint": "$npm_execpath eslint '**/*.{js,ts,json}'",
    "lint:fix": "eslint --fix '**/*.{js,ts,json}'",
    "test": "$npm_execpath test:jest",
    "test:jest": "jest --ci --forceExit"
  },
  "dependencies": {
    "@layerzerolabs/export-deployments": "~0.0.16",
    "@safe-global/protocol-kit": "^1.3.0",
    "micro-memoize": "~4.1.2",
    "p-memoize": "~4.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@ethersproject/wallet": "^5.7.0",
    "@layerzerolabs/devtools": "~1.0.0",
    "@layerzerolabs/devtools-evm": "~2.0.0",
    "@layerzerolabs/io-devtools": "~0.2.0",
    "@layerzerolabs/lz-definitions": "^3.0.75",
    "@layerzerolabs/lz-evm-sdk-v1": "^3.0.75",
    "@layerzerolabs/test-devtools": "~0.4.6",
    "@layerzerolabs/test-devtools-evm-hardhat": "~0.5.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@swc/core": "^1.4.0",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "fast-check": "^3.15.1",
    "fp-ts": "^2.16.2",
    "hardhat": "^2.22.10",
    "hardhat-deploy": "^0.12.1",
    "jest": "^29.7.0",
    "p-memoize": "~4.0.1",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "tslib": "~2.6.2",
    "tsup": "~8.0.1",
    "typescript": "^5.4.4"
  },
  "peerDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@layerzerolabs/devtools": "~1.0.0",
    "@layerzerolabs/devtools-evm": "~2.0.0",
    "@layerzerolabs/io-devtools": "~0.2.0",
    "@layerzerolabs/lz-definitions": "^3.0.75",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "fp-ts": "^2.16.2",
    "hardhat": "^2.22.10",
    "hardhat-deploy": "^0.12.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
