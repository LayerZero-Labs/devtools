{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/utils/*": ["./tasks/shared/*"],
      "@/tasks/*": ["./tasks/*"]
    }
  },
  "include": ["cli", "types", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
