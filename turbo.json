{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "compile": {
            "outputs": ["artifacts/**", "cache/**"],
            "dependsOn": ["^build"]
        },
        "build": {
            "outputs": ["dist/**"],
            "dependsOn": ["compile", "^build"]
        },
        "clean": {
            "outputs": [],
            "cache": false
        },
        "dev": {
            "cache": false,
            "outputs": [],
            "persistent": true
        },
        "lint": {
            "cache": false
        },
        "test": {
            "outputs": [],
            "dependsOn": ["^build"]
        }
    },
    "globalDependencies": ["tsconfig.json"]
}
